{
  "name": "socket-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "engines": {
    "node": ">=18.20.5 <19",
    "yarn": ">=1.22.22 <1.23"
  },
  "scripts": {
    "install": "yarn husky-install && yarn python-install",
    "husky-install": "yarn husky install",
    "python-install": "dotenv -e .env -- sh -c '[ \"$NODE_ENV\" = \"local\" ] && pip install -r requirements.txt || echo \"Skipping pip install\"' && pip install detect-secrets && pip install --upgrade pip",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "jest": "cross-env NODE_ENV=test node --max-old-space-size=4096 ./node_modules/.bin/jest",
    "test": "jest --forceExit -i",
    "test:cov": "jest --coverage --forceExit --runInBand",
    "test-server": "yarn jest --forceExit -i",
    "test:cov-server": "yarn jest --coverage --forceExit --runInBand",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "detect-secret-scan": "yarn python-install && detect-secrets audit .secrets.baseline && git add .secrets.baseline",
    "prepush": "yarn prebuild && rimraf newrelic_agent.log && yarn format && yarn lint && yarn build && yarn test:cov",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "database:create": "yarn typeorm migration:generate -n",
    "database:run": "yarn typeorm migration:run",
    "database:run-local": "yarn build && yarn database:run",
    "database:revert": "yarn typeorm migration:revert"
  },
  "dependencies": {
    "@aws-sdk/client-sqs": "^3.716.0",
    "@nestjs/axios": "^3.1.3",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/microservices": "^10.4.15",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-socket.io": "^10.4.15",
    "@nestjs/swagger": "^8.1.0",
    "@nestjs/terminus": "^10.2.3",
    "@nestjs/websockets": "^10.4.15",
    "aws-cloudwatch-log": "^0.1.6",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cross-env": "^7.0.3",
    "detect-secrets": "^1.0.6",
    "dotenv-cli": "^8.0.0",
    "helmet": "^8.0.0",
    "joi": "^17.13.3",
    "moment-timezone": "^0.5.46",
    "perfect-express-sanitizer": "^2.0.2",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20",
    "typeorm-naming-strategies": "^4.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@nestjs/typeorm": "^10.0.2",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^9.1.7",
    "jest": "^29.5.0",
    "jest-sonar-reporter": "^2.0.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "sqlite3": "^5.1.7",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  }
}
